
#!/bin/bash
# UFW STATUS is ran, grep checks to see if the string matches
# the output of the command and either enables the ufw or installs and enables
# the ufw.
# If the UFW is enabled and present the else statement will tell the user
apt-get install aptitude -y /dev/null

if ufw status | grep -q "Status: inactive"; then
        ufw enable
elif aptitude show ufw | grep -q "State: not installed"; then
        apt-get install ufw -y
        ufw enable
else
        echo "UFW is enabled and present."
fi

